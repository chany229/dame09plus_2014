<h1>Listing users</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>用户名</th>
      <th>评论数</th>
      <th>最近评论</th>
      <th>注册时间</th>
      <th>上次登录</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.comments.count %></td>
      <td><%= user.comments.last.try(:created_at).try(:to_s) %></td>
      <td><%= user.created_at.to_s %></td>
      <td><%= user.current_sign_in_at.try(:to_s) %></td>
      <td><%= link_to 'Show', [:admin, user] %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
      <td><%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

