<div class="block" id="notice">
	删档公测中【…… 欢迎来玩~<%#= AppConfig.notice %>
</div>
<div id="entries">
	<%= render "entries" %>
</div>
<div id="filters">
	<div id="calendar" class="block">
		<%= render "calendar", :date => @calendar_date, :events => @calendar_events %>
	</div>
	<div id="keyword" class="block">
		<%= form_tag '/logs/keyword', :method => 'get', :remote => true do %>
		<%= text_field_tag 'keyword', params[:keyword] || '', :id => "", :placeholder => "请输入关键词" %>
		<input type="submit" value="搜索" class="btn" />
		<% end %>
	</div>
	<div id="tags" class="block">
		<% @tags.each do |tag| %>
		<span style="font-size: <%= tag[:count]/10.0 + 0.7 %>em;">
			<% if remote? %>
			<%= link_to tag[:name], tag_path(tag[:name]), :remote => true %>(<%= tag[:count] %>)
			<% else %>
			<%= link_to tag[:name], "#/logs/tag/#{tag[:name]}" %>(<%= tag[:count] %>)
			<% end %>
		</span>
		<% end %>
	</div>
</div>
<div class="clear"></div>
<script type="text/javascript">
(function($){
	$('.entry').highlight(['<%= params[:keyword] %>']);
})(jQuery)	
</script>