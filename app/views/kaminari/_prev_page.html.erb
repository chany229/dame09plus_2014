<span class="prev">
    <% if @page_hash %>
    <%= link_to_unless current_page.first?, t('views.pagination.previous').html_safe, "#{@page_hash}/p#{current_page - 1}", :rel => 'prev', :remote => remote %>
    <% else %>
    <%= link_to_unless current_page.first?, t('views.pagination.previous').html_safe, url, :rel => 'prev', :remote => remote %>
    <% end %>
</span>